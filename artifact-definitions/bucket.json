{
  "$md": {
    "label": "Example Storage Bucket (edit in ./artifact-definitions/bucket.json)",
    "name": "bucket"
  },
  "$schema": "http://json-schema.org/draft-07/schema",
  "description": "Example storage bucket artifact - customize this schema to match your bucket outputs",
  "properties": {
    "infrastructure": {
      "properties": {
        "bucket_id": {
          "description": "Unique identifier for the bucket",
          "title": "Bucket ID",
          "type": "string"
        },
        "bucket_name": {
          "title": "Bucket Name",
          "type": "string"
        },
        "endpoint": {
          "description": "Storage endpoint URL",
          "title": "Endpoint",
          "type": "string"
        }
      },
      "required": ["bucket_id", "bucket_name"],
      "title": "Infrastructure Details",
      "type": "object"
    },
    "policies": {
      "items": {
        "properties": {
          "id": {
            "title": "Policy ID",
            "type": "string"
          },
          "name": {
            "title": "Policy Name",
            "type": "string"
          }
        },
        "required": ["id", "name"],
        "type": "object"
      },
      "title": "Access Policies",
      "type": "array"
    }
  },
  "required": ["infrastructure", "policies"],
  "title": "Example Storage Bucket",
  "type": "object"
}

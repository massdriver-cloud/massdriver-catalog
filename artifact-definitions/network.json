          },
          "required": [
            "network_id",
            "cidr"
          ],
          "title": "Infrastructure Details",
          "type": "object"
        }
      },
      "required": [
        "infrastructure"
      ],
      "title": "Network Connection Data",
      "type": "object"
    },
    "specs": {
      "properties": {
        "network": {
          "properties": {
            "cidr": {
              "title": "CIDR Block",
              "type": "string"
            }
          },
          "required": [
            "cidr"
          ],
          "title": "Network Info",
          "type": "object"
        }
      },
      "required": [
        "network"
      ],
      "title": "Network Specifications",
      "type": "object"
    }

{
  "$md": {
    "label": "Example Network (edit in ./artifact-definitions/network.json)",
    "name": "network",
    "ui": {
      "__comment": "https://docs.massdriver.cloud/guides/custom-artifact-definition#customizing-the-artifact-types-that-can-be-defaulted-in-an-environment",
      "environmentDefaultGroup": "networks"
    }
  },
  "$schema": "http://json-schema.org/draft-07/schema",
  "description": "Example network artifact - customize this schema to match your infrastructure's network outputs",
  "properties": {
    "infrastructure": {
      "properties": {
        "cidr": {
          "description": "The CIDR block for the network",
          "title": "CIDR Block",
          "type": "string"
        },
        "network_id": {
          "description": "The network identifier",
          "title": "Network ID",
          "type": "string"
        }
      },
      "required": ["network_id", "cidr"],
      "title": "Infrastructure Details",
      "type": "object"
    },
    "subnets": {
      "items": {
        "properties": {
          "cidr": {
            "title": "CIDR Block",
            "type": "string"
          },
          "subnet_id": {
            "title": "Subnet ID",
            "type": "string"
          },
          "type": {
            "enum": ["public", "private"],
            "title": "Subnet Type",
            "type": "string"
          }
        },
        "required": ["subnet_id", "cidr"],
        "type": "object"
      },
      "title": "Subnets",
      "type": "array"
    }
  },
  "required": ["infrastructure", "subnets"],
  "title": "Example Network",
  "type": "object"
}

{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$md": {
    "name": "network",
    "label": "Example Network (edit in ./artifact-definitions)"
  },
  "type": "object",
  "title": "Example Network",
  "description": "Example network artifact - customize this schema to match your infrastructure's network outputs",
  "required": ["data", "specs"],
  "properties": {
    "data": {
      "type": "object",
      "title": "Network Connection Data",
      "required": ["infrastructure"],
      "properties": {
        "infrastructure": {
          "type": "object",
          "title": "Infrastructure Details",
          "required": ["network_id", "cidr"],
          "properties": {
            "network_id": {
              "type": "string",
              "title": "Network ID",
              "description": "The network identifier"
            },
            "cidr": {
              "type": "string",
              "title": "CIDR Block",
              "description": "The CIDR block for the network"
            },
            "subnets": {
              "type": "array",
              "title": "Subnets",
              "items": {
                "type": "string"
              }
            }
          }
        }
      }
    },
    "specs": {
      "type": "object",
      "title": "Network Specifications",
      "required": ["network"],
      "properties": {
        "network": {
          "type": "object",
          "title": "Network Info",
          "required": ["cidr"],
          "properties": {
            "cidr": {
              "type": "string",
              "title": "CIDR Block"
            }
          }
        }
      }
    }
  }
}


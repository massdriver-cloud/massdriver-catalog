{
  "$md": {
    "label": "Example Network (edit in ./artifact-definitions/network.json)",
    "name": "network",
    "ui": {
      "__comment": "https://docs.massdriver.cloud/guides/custom-artifact-definition#customizing-the-artifact-types-that-can-be-defaulted-in-an-environment",
      "environmentDefaultGroup": "networks"
    }
  },
  "$schema": "http://json-schema.org/draft-07/schema",
  "title": "Network",
  "description": "Virtual network with subnet configuration",
  "type": "object",
  "required": ["id", "cidr", "subnets"],
  "properties": {
    "id": {
      "title": "ID",
      "description": "Virtual network resource identifier",
      "type": "string"
    },
    "cidr": {
      "title": "CIDR",
      "description": "Network address range in CIDR notation",
      "type": "string"
    },
    "subnets": {
      "title": "Subnets",
      "description": "Network subnet allocations",
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "cidr"],
        "properties": {
          "id": {
            "title": "ID",
            "description": "Subnet resource identifier",
            "type": "string"
          },
          "cidr": {
            "title": "CIDR",
            "description": "Subnet address range",
            "type": "string"
          },
          "type": {
            "title": "Type",
            "description": "Subnet visibility",
            "type": "string",
            "enum": ["public", "private"]
          }
        }
      }
    }
  }
}

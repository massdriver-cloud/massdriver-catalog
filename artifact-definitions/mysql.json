{
  "$md": {
    "label": "Example MySQL (edit in ./artifact-definitions/mysql.json)",
    "name": "mysql"
  },
  "$schema": "http://json-schema.org/draft-07/schema",
  "title": "MySQL Database",
  "description": "MySQL database instance with connection details and access policies",
  "type": "object",
  "required": ["auth", "id", "policies"],
  "properties": {
    "auth": {
      "title": "Authentication",
      "description": "Database connection parameters",
      "type": "object",
      "required": ["hostname", "port", "database", "username", "password"],
      "properties": {
        "hostname": {
          "title": "Host",
          "description": "Database server hostname or IP",
          "type": "string"
        },
        "port": {
          "title": "Port",
          "description": "TCP port number",
          "type": "integer",
          "default": 3306
        },
        "database": {
          "title": "Database",
          "description": "Default database name",
          "type": "string"
        },
        "username": {
          "title": "Username",
          "description": "Authentication username",
          "type": "string"
        },
        "password": {
          "$md.sensitive": true,
          "$md.copyable": false,
          "title": "Password",
          "description": "Authentication password",
          "type": "string"
        }
      }
    },
    "id": {
      "title": "ID",
      "description": "Unique database instance identifier",
      "type": "string"
    },
    "policies": {
      "title": "Access Policies",
      "description": "Available IAM policies for database access",
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "name"],
        "properties": {
          "id": {
            "title": "ID",
            "description": "Policy identifier",
            "type": "string"
          },
          "name": {
            "title": "Name",
            "description": "Human-readable policy name",
            "type": "string"
          }
        }
      }
    }
  }
}

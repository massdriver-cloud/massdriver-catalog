{
  "$md": {
    "label": "Example PostgreSQL (edit in ./artifact-definitions)",
    "name": "postgres"
  },
  "$schema": "http://json-schema.org/draft-07/schema",
  "description": "Example PostgreSQL artifact - customize this schema to match your database outputs",
  "properties": {
    "data": {
      "properties": {
        "authentication": {
          "properties": {
            "database": {
              "title": "Database Name",
              "type": "string"
            },
            "hostname": {
              "title": "Hostname",
              "type": "string"
            },
            "password": {
              "title": "Password",
              "type": "string"
            },
            "port": {
              "title": "Port",
              "type": "integer"
            },
            "username": {
              "title": "Username",
              "type": "string"
            }
          },
          "required": [
            "hostname",
            "port",
            "username",
            "password"
          ],
          "title": "Authentication",
          "type": "object"
        },
        "infrastructure": {
          "properties": {
            "id": {
              "title": "Resource ID",
              "type": "string"
            }
          },
          "title": "Infrastructure Details",
          "type": "object"
        },
        "security": {
          "properties": {
            "policies": {
              "items": {
                "properties": {
                  "name": {
                    "enum": [
                      "read",
                      "write",
                      "admin"
                    ],
                    "title": "Policy Name",
                    "type": "string"
                  },
                  "policy": {
                    "title": "Policy",
                    "type": "string"
                  }
                },
                "required": [
                  "name",
                  "policy"
                ],
                "type": "object"
              },
              "title": "Available Access Policies",
              "type": "array"
            }
          },
          "title": "Security",
          "type": "object"
        }
      },
      "required": [
        "authentication",
        "infrastructure"
      ],
      "title": "PostgreSQL Connection Data",
      "type": "object"
    },
    "specs": {
      "properties": {
        "database": {
          "properties": {
            "engine": {
              "const": "postgres",
              "title": "Database Engine",
              "type": "string"
            },
            "hostname": {
              "title": "Database Hostname",
              "type": "string"
            },
            "port": {
              "title": "Database Port",
              "type": "integer"
            },
            "version": {
              "title": "PostgreSQL Version",
              "type": "string"
            }
          },
          "required": [
            "version",
            "engine"
          ],
          "title": "Database Info",
          "type": "object"
        },
        "network": {
          "properties": {
            "private_ip": {
              "title": "Private IP",
              "type": "string"
            },
            "subnet_id": {
              "title": "Subnet ID",
              "type": "string"
            }
          },
          "title": "Network Info",
          "type": "object"
        }
      },
      "required": [
        "database"
      ],
      "title": "PostgreSQL Specifications",
      "type": "object"
    }
  },
  "required": [
    "data",
    "specs"
  ],
  "title": "Example PostgreSQL Database",
  "type": "object"
}

{
  "$md": {
    "label": "Example PostgreSQL (edit in ./artifact-definitions/postgres.json)",
    "name": "postgres"
  },
  "$schema": "http://json-schema.org/draft-07/schema",
  "description": "Example PostgreSQL artifact - customize this schema to match your database outputs",
  "properties": {
    "connection": {
      "description": "Everything needed to connect to the database",
      "properties": {
        "database": {
          "title": "Database Name",
          "type": "string"
        },
        "hostname": {
          "title": "Hostname",
          "type": "string"
        },
        "password": {
          "$md.sensitive": true,
          "title": "Password",
          "type": "string"
        },
        "port": {
          "default": 5432,
          "title": "Port",
          "type": "integer"
        },
        "username": {
          "title": "Username",
          "type": "string"
        }
      },
      "required": ["hostname", "port", "database", "username", "password"],
      "title": "Connection Details",
      "type": "object"
    },
    "infrastructure": {
      "properties": {
        "database_id": {
          "description": "Unique identifier for the database instance",
          "title": "Database ID",
          "type": "string"
        }
      },
      "required": ["database_id"],
      "title": "Infrastructure Details",
      "type": "object"
    }
  },
  "required": ["connection", "infrastructure"],
  "title": "Example PostgreSQL Database",
  "type": "object"
}

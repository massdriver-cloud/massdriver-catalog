{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$md": {
    "name": "postgres",
    "label": "Demo PostgreSQL"
  },
  "type": "object",
  "title": "Demo PostgreSQL Database",
  "description": "A demo PostgreSQL database artifact for arcade demos",
  "required": ["data", "specs"],
  "properties": {
    "data": {
      "type": "object",
      "title": "PostgreSQL Connection Data",
      "required": ["authentication", "infrastructure"],
      "properties": {
        "authentication": {
          "type": "object",
          "title": "Authentication",
          "required": ["hostname", "port", "username", "password"],
          "properties": {
            "hostname": {
              "type": "string",
              "title": "Hostname"
            },
            "port": {
              "type": "integer",
              "title": "Port"
            },
            "username": {
              "type": "string",
              "title": "Username"
            },
            "password": {
              "type": "string",
              "title": "Password"
            },
            "database": {
              "type": "string",
              "title": "Database Name"
            }
          }
        },
        "infrastructure": {
          "type": "object",
          "title": "Infrastructure Details",
          "properties": {
            "id": {
              "type": "string",
              "title": "Resource ID"
            }
          }
        }
      }
    },
    "specs": {
      "type": "object",
      "title": "PostgreSQL Specifications",
      "required": ["database"],
      "properties": {
        "database": {
          "type": "object",
          "title": "Database Info",
          "required": ["version", "engine"],
          "properties": {
            "engine": {
              "type": "string",
              "title": "Database Engine",
              "const": "postgres"
            },
            "version": {
              "type": "string",
              "title": "PostgreSQL Version"
            }
          }
        }
      }
    }
  }
}


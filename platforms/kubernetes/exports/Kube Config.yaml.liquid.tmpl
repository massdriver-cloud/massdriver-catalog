apiVersion: v1
clusters:
  - cluster:
      certificate-authority-data: {{ artifact.authentication.cluster.certificate-authority-data }}
      server: {{ artifact.authentication.cluster.server }}
    name: {{ artifact.id | default: "md-k8s-cluster" }}
contexts:
  - context:
      cluster: {{ artifact.id | default: "md-k8s-cluster" }}
      namespace: {{ artifact.namespace }}
      user: {{ artifact.id | default: "md-k8s-user" }}
    name: {{ artifact.id | default: "md-k8s" }}
current-context: {{ artifact.id | default: "md-k8s" }}
kind: Config
preferences: {}
users:
  - name: {{ artifact.id | default: "md-k8s-user" }}
    user:
      token: {{ artifact.authentication.user.token }}
